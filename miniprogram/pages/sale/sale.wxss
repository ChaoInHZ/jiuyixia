/* miniprogram/pages/sale/sale.wxss */
page {
  padding-bottom: 0;
}
.line-through-text {
  text-decoration: line-through;
}
.placeholder {
  color: rgba(0,0,0,.3);
}
.price-icon {
  display: inline-block;
}
.switch-btn {
  width: 30rpx;
  height: 30rpx;
  border: 1rpx solid rgba(0,0,0,.3);
  border-radius: 50%;
  float: left;
  margin-right: 14rpx;
}
.switch-btn.checked:after {
  content: " ";
  height: 52%;
  width: 52%;
  background-color: rgba(0,0,0,.3);
  z-index: 10;
  display: block;
  border-radius: 50%;
  position: relative;
  left: 24%;
  top: 24%;
}
.switch-btn-label {
  float: left;
  font-size: 28rpx;
  width: calc(100% - 50rpx);
}
.weui-cells__group_form .weui-cell.btn-section {
  padding-top: 60rpx;
  padding-bottom: 60rpx;
}
.btn-section:before {
  border: none;
}
.go-to {
  height: 48rpx;
}
.go-to image{
  width: 30rpx;
  height: 30rpx;
  float: right;
  position: relative;
  top: 10rpx;
}