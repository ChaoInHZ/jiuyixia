/* miniprogram/pages/favor/favor.wxss */
.favor-panel {
  margin: 0;
}
.pro-list-item {
  margin: 10rpx;
  border-radius: 10rpx;
}
.pro-list-item .wrapper {
  margin: 0;
  width: 100%;
  position: relative;
  display: flex;
  justify-content: space-between;
  overflow: hidden;
  box-sizing: border-box;
}
.pro-list-item .content {
  width: 100%;
  line-height: 22px;
  margin-right:0;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  margin-left: -90px;
  display: flex;
  padding: 40rpx 20rpx;
}
.pro-list-item:first-child {
  margin-top: 10rpx;
}
.pro-list-item .name {
  margin-bottom: 10rpx;
}
.pro-list-item .img {
  width: 200rpx;
  height: 200rpx;
  margin-right: 50rpx;
}
.pro-list-item .price {
  color: #f2be45;
  margin-right: 20rpx;
}
.pro-list-item .ori-price {
  color: #bacac6;
  text-decoration: line-through;
  font-size: smaller;
}
.no-result-panel {
  display: block;
  height: calc(100vh - 200rpx);
  padding: 80rpx 0;
  box-sizing: border-box;
}
.no-result-panel image {
  display: block;
  margin: 20rpx auto;
  width: 200rpx;
  height: 200rpx;
}
.no-result-panel .note {
  display: block;
  text-align: center;
}
.no-result-panel navigator {
  display: inline;
}
.no-result-panel .note .link {
  text-decoration: underline;
  color: #f2be45;
}

.del {
  background-color: orangered;
  width: 90px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
 }
 .touch-move-active .content,
 .touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
 }